<h4>Tell the world how you feel!</h4>
<div class = "Postbox">
    <%= form_for :post, url: posts_path(@current_user)  do |f| %>
    <%= f.text_field :content, placeholder:"Type something here....", class: "form-control form-control-lg"%>
    <br>
    <%= f.submit :Post, class: "btn btn-primary" %>
    <%end%>
    <br>
    <%= link_to '<button type="button">Back</button>'.html_safe, @user %>
</div>
